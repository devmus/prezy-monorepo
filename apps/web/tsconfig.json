// apps/web/tsconfig.json

{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "noEmit": true
    },
    "references": [
        {
            "path": "../../packages/auth"
        }
    ],
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "types",
        "../../packages/auth/types",
        "../../packages/auth/models/Store.ts",
        "../../packages/auth/models/Service.ts",
        "../../packages/auth/models/Giftcard.ts"
    ],
    "exclude": ["node_modules"]
}
