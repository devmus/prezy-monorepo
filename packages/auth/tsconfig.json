{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true, // ðŸ‘ˆ Required for project references
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "lib", "models"],
  "exclude": ["types", "dist", "node_modules"]
}

